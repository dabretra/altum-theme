<script>
  (function() {
    class ProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.currentCollection = null;
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-product-slider-tab-{{ ai_gen_id }}');
        this.collections = this.querySelectorAll('.ai-product-slider-collection-{{ ai_gen_id }}');
        
        this.currentCollection = this.querySelector('.ai-product-slider-collection-{{ ai_gen_id }}.active');
        
        this.setupTabListeners();
        this.initializeCurrentCollection();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupTabListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', (e) => {
            const collectionId = e.target.dataset.collection;
            this.switchCollection(collectionId);
          });
        });
      }

      switchCollection(collectionId) {
        this.stopAutoplay();
        
        this.tabs.forEach((tab) => {
          if (tab.dataset.collection === collectionId) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.collections.forEach((collection) => {
          if (collection.dataset.collectionId === collectionId) {
            collection.classList.add('active');
            this.currentCollection = collection;
          } else {
            collection.classList.remove('active');
          }
        });

        this.currentSlide = 0;
        this.initializeCurrentCollection();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      initializeCurrentCollection() {
        if (!this.currentCollection) return;

        this.track = this.currentCollection.querySelector('.ai-product-slider-track-{{ ai_gen_id }}');
        this.slides = this.currentCollection.querySelectorAll('.ai-product-slider-slide-{{ ai_gen_id }}');
        this.prevButton = this.currentCollection.querySelector('.ai-product-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.currentCollection.querySelector('.ai-product-slider-next-{{ ai_gen_id }}');
        this.dots = this.currentCollection.querySelectorAll('.ai-product-slider-dot-{{ ai_gen_id }}');

        if (this.slides.length === 0) return;

        this.setupEventListeners();
        this.updateSlider();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.replaceWith(this.prevButton.cloneNode(true));
          this.prevButton = this.currentCollection.querySelector('.ai-product-slider-prev-{{ ai_gen_id }}');
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.replaceWith(this.nextButton.cloneNode(true));
          this.nextButton = this.currentCollection.querySelector('.ai-product-slider-next-{{ ai_gen_id }}');
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot) => {
          dot.replaceWith(dot.cloneNode(true));
        });
        
        this.dots = this.currentCollection.querySelectorAll('.ai-product-slider-dot-{{ ai_gen_id }}');
        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.target.dataset.slide);
            this.goToSlide(slideIndex);
          });
        });

        {% if block.settings.autoplay %}
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        {% endif %}
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlider();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlider();
      }

      updateSlider() {
        if (!this.track || !this.dots) return;
        
        const offset = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        const delay = {{ block.settings.autoplay_delay }} * 1000;
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, delay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('product-slider-{{ ai_gen_id }}', ProductSlider{{ ai_gen_id }});
  })();
</script>

