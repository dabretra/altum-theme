{% doc %}
  @prompt
    Add a product slider above the header to show products, cycling pictures of products and prices. With functionality so that I can switch products being displayed easily., I also want to be able to show mulitple collections of products
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
    overflow: hidden;
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .ai-product-slider-tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .ai-product-slider-tab-{{ ai_gen_id }} {
    padding: 10px 20px;
    background-color: {{ block.settings.tab_color }};
    color: {{ block.settings.tab_text_color }};
    border: none;
    border-radius: {{ block.settings.tab_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_color }};
  }

  .ai-product-slider-tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_color }};
    color: {{ block.settings.tab_active_text_color }};
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
  }

  .ai-product-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    padding: 20px;
  }

  .ai-product-slider-image-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
  }

  .ai-product-slider-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-product-slider-info-{{ ai_gen_id }} {
    flex: 1;
    text-align: center;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-product-slider-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0 0 16px;
    font-weight: 500;
  }

  .ai-product-slider-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-slider-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }

  .ai-product-slider-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.control_color }};
    color: {{ block.settings.control_icon_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.control_hover_color }};
  }

  .ai-product-slider-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-product-slider-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-product-slider-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  .ai-product-slider-collection-{{ ai_gen_id }} {
    display: none;
  }

  .ai-product-slider-collection-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-product-slider-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-slider-empty-title-{{ ai_gen_id }} {
    font-size: 18px;
    margin: 0 0 8px;
    color: #333;
  }

  .ai-product-slider-empty-text-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-slider-slide-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 20px;
    }

    .ai-product-slider-image-{{ ai_gen_id }} {
