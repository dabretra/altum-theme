    }

    .ai-product-slider-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.85 }}px;
    }

    .ai-product-slider-tabs-{{ ai_gen_id }} {
      gap: 8px;
    }

    .ai-product-slider-tab-{{ ai_gen_id }} {
      padding: 8px 16px;
      font-size: 13px;
