{% doc %}
  @prompt
    I want a slider bar to display products
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-slider-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 30px;
  }

  .ai-product-slider-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
  }

  .ai-product-slider-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.product_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 10px;
  }

  .ai-product-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-slider-card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-product-slider-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-product-slider-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-slider-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-slider-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-product-slider-info-{{ ai_gen_id }} {
    padding: 15px;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ai-product-slider-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-product-slider-compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    color: #999;
    margin-left: 8px;
    font-size: {{ block.settings.product_price_size | minus: 2 }}px;
  }

  .ai-product-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-product-slider-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-slider-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-slider-empty-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin: 0 auto 20px;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-product-slider-card-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.card_width | times: 0.8 }}px;
    }

    .ai-product-slider-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-slider-{{ ai_gen_id }} class="ai-product-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-slider-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-product-slider-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-product-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-product-slider-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-product-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-product-slider-track-{{ ai_gen_id }}" data-slider-track>
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <div class="ai-product-slider-card-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-product-slider-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-slider-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </a>
              <div class="ai-product-slider-info-{{ ai_gen_id }}">
                <h3 class="ai-product-slider-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
                <div class="ai-product-slider-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-slider-compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_navigation %}
          <div class="ai-product-slider-nav-{{ ai_gen_id }}">
            <button
              class="ai-product-slider-nav-button-{{ ai_gen_id }}"
              data-slider-prev
              aria-label="Previous products"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
            <button
              class="ai-product-slider-nav-button-{{ ai_gen_id }}"
              data-slider-next
              aria-label="Next products"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-product-slider-empty-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <p>Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('[data-slider-track]');
        this.prevButton = this.querySelector('[data-slider-prev]');
        this.nextButton = this.querySelector('[data-slider-next]');

        if (!this.track) return;

        this.setupEventListeners();
        this.updateButtonStates();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.slide('prev'));
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.slide('next'));
        }

        this.track.addEventListener('scroll', () => this.updateButtonStates());
      }

      slide(direction) {
        const cardWidth = this.track.querySelector('.ai-product-slider-card-{{ ai_gen_id }}').offsetWidth;
        const gap = {{ block.settings.product_gap }};
        const scrollAmount = cardWidth + gap;

        if (direction === 'prev') {
          this.track.scrollLeft -= scrollAmount;
        } else {
          this.track.scrollLeft += scrollAmount;
        }
      }

      updateButtonStates() {
        if (!this.prevButton || !this.nextButton) return;

        const isAtStart = this.track.scrollLeft <= 0;
        const isAtEnd = this.track.scrollLeft + this.track.offsetWidth >= this.track.scrollWidth - 1;

        this.prevButton.disabled = isAtStart;
        this.nextButton.disabled = isAtEnd;
      }
    }

    customElements.define('product-slider-{{ ai_gen_id }}', ProductSlider{{ ai_gen_id }});
  })();
</script>

