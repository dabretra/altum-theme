{% doc %}
  @prompt
    Add a smart search bar to the header section that allows customers to search for products and collections , I want some space between the search function and the product slider. Add an adjustable boarder., Add in the search bar above the spacer, Add a spacer below the search bar
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-spacer-{{ ai_gen_id }} {
    width: 100%;
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
  }

  .ai-spacer__border-{{ ai_gen_id }} {
    width: 100%;
    height: 0;
    border-top: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
    {% if block.settings.border_width == 0 %}
      border: none;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-spacer-{{ ai_gen_id }} {
      padding-top: {{ block.settings.spacing_top_mobile }}px;
      padding-bottom: {{ block.settings.spacing_bottom_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-spacer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-spacer__border-{{ ai_gen_id }}"></div>
</div>

{% schema %}
{
  "name": "Spacer with border",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Desktop spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top spacing",
      "default": 30
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom spacing",
      "default": 30
    },
    {
      "type": "header",
      "content": "Mobile spacing"
    },
    {
      "type": "range",
      "id": "spacing_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top spacing",
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom spacing",
      "default": 20
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 1
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Border style",
      "options": [
        {
          "value": "solid",
          "label": "Solid"
        },
        {
          "value": "dashed",
          "label": "Dashed"
        },
        {
          "value": "dotted",
          "label": "Dotted"
        }
      ],
      "default": "solid"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#e0e0e0"
    }
  ],
  "presets": [
    {
      "name": "Spacer with border"
    }
  ]
}
{% endschema %}
