{% doc %}
  @prompt
    I want adjustable space between the product search function and the product slider
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-search-slider-{{ ai_gen_id }} {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-search-section-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.spacing_between }}px;
  }

  .ai-search-container-{{ ai_gen_id }} {
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-search-input-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    gap: 8px;
  }

  .ai-search-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    font-size: 16px;
  }

  .ai-search-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.search_button_color }};
    color: {{ block.settings.search_button_text_color }};
    border: none;
    border-radius: {{ block.settings.search_border_radius }}px;
    cursor: pointer;
    font-size: 16px;
  }

  .ai-search-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.search_button_hover_color }};
  }

  .ai-slider-section-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-slider-container-{{ ai_gen_id }} {
    overflow: hidden;
    position: relative;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    gap: {{ block.settings.product_gap }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.product_gap }}px * ({{ block.settings.products_per_view }} - 1)) / {{ block.settings.products_per_view }});
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.card_border_radius }}px;
    margin-bottom: 12px;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.card_border_radius }}px;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
  }

  .ai-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 24px;
  }

  .ai-slider-arrow-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slider-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-slider-arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-no-results-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.text_color }};
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.product_gap }}px) / 2);
    }
  }
{% endstyle %}

<product-search-slider-{{ ai_gen_id }} class="ai-product-search-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-search-section-{{ ai_gen_id }}">
    <div class="ai-search-container-{{ ai_gen_id }}">
      <div class="ai-search-input-wrapper-{{ ai_gen_id }}">
        <input
          type="text"
          class="ai-search-input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.search_placeholder }}"
          aria-label="Search products"
        >
        <button class="ai-search-button-{{ ai_gen_id }}" aria-label="Search">
          {{ block.settings.search_button_text }}
        </button>
      </div>
    </div>
  </div>

  <div class="ai-slider-section-{{ ai_gen_id }}">
    <div class="ai-slider-container-{{ ai_gen_id }}">
      <div class="ai-slider-track-{{ ai_gen_id }}">
        {% if block.settings.product_collection %}
          {% for product in block.settings.product_collection.products limit: 12 %}
            <div class="ai-product-card-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <h3 class="ai-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            </div>
          {% endfor %}
        {% else %}
          <div class="ai-no-results-{{ ai_gen_id }}">
            Select a collection to display products
          </div>
        {% endif %}
      </div>
    </div>

    {% if block.settings.product_collection and block.settings.product_collection.products.size > block.settings.products_per_view %}
      <div class="ai-slider-nav-{{ ai_gen_id }}">
        <button class="ai-slider-arrow-{{ ai_gen_id }} ai-slider-prev-{{ ai_gen_id }}" aria-label="Previous">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="ai-slider-arrow-{{ ai_gen_id }} ai-slider-next-{{ ai_gen_id }}" aria-label="Next">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</product-search-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSearchSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.productsPerView = {{ block.settings.products_per_view }};
      }

      connectedCallback() {
        this.searchInput = this.querySelector('.ai-search-input-{{ ai_gen_id }}');
        this.searchButton = this.querySelector('.ai-search-button-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slider-next-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');

        if (this.searchButton) {
          this.searchButton.addEventListener('click', () => this.handleSearch());
        }

        if (this.searchInput) {
          this.searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
              this.handleSearch();
            }
          });
        }

        if (this.prevButton && this.nextButton) {
          this.prevButton.addEventListener('click', () => this.slide(-1));
          this.nextButton.addEventListener('click', () => this.slide(1));
          this.updateButtons();
        }
      }

      handleSearch() {
        const query = this.searchInput.value.trim().toLowerCase();
        
        this.cards.forEach(card => {
          const title = card.querySelector('.ai-product-title-{{ ai_gen_id }}').textContent.toLowerCase();
          if (query === '' || title.includes(query)) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });

        this.currentIndex = 0;
        this.updateSlider();
      }

      slide(direction) {
        const visibleCards = Array.from(this.cards).filter(card => card.style.display !== 'none');
        const maxIndex = Math.max(0, visibleCards.length - this.productsPerView);
        
        this.currentIndex = Math.max(0, Math.min(maxIndex, this.currentIndex + direction));
        this.updateSlider();
      }

      updateSlider() {
        if (!this.track) return;
        
        const cardWidth = this.cards[0]?.offsetWidth || 0;
        const gap = {{ block.settings.product_gap }};
        const offset = this.currentIndex * (cardWidth + gap);
        
        this.track.style.transform = `translateX(-${offset}px)`;
        this.updateButtons();
      }

      updateButtons() {
        if (!this.prevButton || !this.nextButton) return;
        
        const visibleCards = Array.from(this.cards).filter(card => card.style.display !== 'none');
        const maxIndex = Math.max(0, visibleCards.length - this.productsPerView);
        
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }
    }

    customElements.define('product-search-slider-{{ ai_gen_id }}', ProductSearchSlider{{ ai_gen_id }});
  })();
</script>

