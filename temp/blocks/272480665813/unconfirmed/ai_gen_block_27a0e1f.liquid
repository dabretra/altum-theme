{% doc %}
  @prompt
    Add a product slider above the header to show products, cycling pictures of products and prices. With functionality so that I can switch products being displayed easily.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
    overflow: hidden;
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
  }

  .ai-product-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    padding: 20px;
  }

  .ai-product-slider-image-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
  }

  .ai-product-slider-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-product-slider-info-{{ ai_gen_id }} {
    flex: 1;
    text-align: center;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-product-slider-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0 0 16px;
    font-weight: 500;
  }

  .ai-product-slider-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-slider-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }

  .ai-product-slider-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.control_color }};
    color: {{ block.settings.control_icon_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.control_hover_color }};
  }

  .ai-product-slider-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-product-slider-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-product-slider-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .ai-product-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  .ai-product-slider-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-slider-empty-title-{{ ai_gen_id }} {
    font-size: 18px;
    margin: 0 0 8px;
    color: #333;
  }

  .ai-product-slider-empty-text-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-slider-slide-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 20px;
    }

    .ai-product-slider-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.7 }}px;
      height: {{ block.settings.image_size | times: 0.7 }}px;
    }

    .ai-product-slider-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-product-slider-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<product-slider-{{ ai_gen_id }} class="ai-product-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-slider-container-{{ ai_gen_id }}">
    {% liquid
      assign products = block.settings.products
      assign has_products = false
      if products.size > 0
        assign has_products = true
      endif
    %}

    {% if has_products %}
      <div class="ai-product-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-product-slider-track-{{ ai_gen_id }}">
          {% for product in products %}
            <div class="ai-product-slider-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
              <div class="ai-product-slider-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-slider-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-product-slider-info-{{ ai_gen_id }}">
                <h3 class="ai-product-slider-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <div class="ai-product-slider-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                <a href="{{ product.url }}" class="ai-product-slider-link-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% if products.size > 1 %}
        <div class="ai-product-slider-controls-{{ ai_gen_id }}">
          <button
            class="ai-product-slider-button-{{ ai_gen_id }} ai-product-slider-prev-{{ ai_gen_id }}"
            aria-label="Previous product"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>

          <div class="ai-product-slider-dots-{{ ai_gen_id }}">
            {% for product in products %}
              <button
                class="ai-product-slider-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index0 }}"
                aria-label="Go to product {{ forloop.index }}"
              ></button>
            {% endfor %}
          </div>

          <button
            class="ai-product-slider-button-{{ ai_gen_id }} ai-product-slider-next-{{ ai_gen_id }}"
            aria-label="Next product"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-slider-empty-{{ ai_gen_id }}">
        <h3 class="ai-product-slider-empty-title-{{ ai_gen_id }}">Product slider</h3>
        <p class="ai-product-slider-empty-text-{{ ai_gen_id }}">Next, add products to display in the slider</p>
      </div>
    {% endif %}
  </div>
</product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-product-slider-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-product-slider-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-product-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-product-slider-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-product-slider-dot-{{ ai_gen_id }}');

        if (this.slides.length === 0) return;

        this.setupEventListeners();
        this.updateSlider();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.target.dataset.slide);
            this.goToSlide(slideIndex);
          });
        });

        {% if block.settings.autoplay %}
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        {% endif %}
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlider();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlider();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        const delay = {{ block.settings.autoplay_delay }} * 1000;
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, delay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('product-slider-{{ ai_gen_id }}', ProductSlider{{ ai_gen_id }});
  })();
</script>

