<script>
  (function() {
    class ScrollTimeline{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.items = [];
        this.progressBar = null;
        this.timelineLine = null;
      }

      connectedCallback() {
        this.items = Array.from(this.querySelectorAll('[data-timeline-item]'));
        this.progressBar = this.querySelector('.ai-timeline-progress-{{ ai_gen_id }}');
        this.timelineLine = this.querySelector('.ai-timeline-line-{{ ai_gen_id }}');
        
        if (this.items.length > 0) {
          this.setupScrollListener();
          this.updateTimeline();
        }
      }

      setupScrollListener() {
        let ticking = false;
        
        window.addEventListener('scroll', () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              this.updateTimeline();
              ticking = false;
            });
            ticking = true;
          }
        });
      }

      updateTimeline() {
        const windowHeight = window.innerHeight;
        const triggerPoint = windowHeight * 0.6;
        
        let activeIndex = -1;
        
        this.items.forEach((item, index) => {
          const rect = item.getBoundingClientRect();
          const itemTop = rect.top;
          
          if (itemTop < triggerPoint) {
            item.classList.add('active');
            activeIndex = index;
          } else {
            item.classList.remove('active');
          }
        });
        
        if (this.items.length > 0 && this.timelineLine) {
          const firstItem = this.items[0];
          const lastItem = this.items[this.items.length - 1];
          const lineRect = this.timelineLine.getBoundingClientRect();
          const lineTop = lineRect.top;
          const lineHeight = lineRect.height;
          
          let progress = 0;
          
          if (activeIndex >= 0) {
            const activeItem = this.items[activeIndex];
            const activeRect = activeItem.getBoundingClientRect();
            const activeItemTop = activeRect.top;
            
            const relativePosition = lineTop - activeItemTop;
            progress = Math.min(Math.max((relativePosition / lineHeight) * 100, 0), 100);
            
            if (activeIndex === this.items.length - 1 && activeItemTop < triggerPoint) {
              progress = 100;
            }
          }
          
          if (this.progressBar) {
            this.progressBar.style.height = progress + '%';
          }
        }
      }

      disconnectedCallback() {
        window.removeEventListener('scroll', this.updateTimeline);
      }
    }

    customElements.define('scroll-timeline-{{ ai_gen_id }}', ScrollTimeline{{ ai_gen_id }});
  })();
</script>

