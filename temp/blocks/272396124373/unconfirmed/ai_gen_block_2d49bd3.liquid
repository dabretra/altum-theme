{% doc %}
  @prompt
    A heading with an animated glowing effect
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glow-heading-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-glow-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    margin: 0;
    text-align: {{ block.settings.alignment }};
    animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.animation_speed }}s ease-in-out infinite;
  }

  @keyframes ai-glow-pulse-{{ ai_gen_id }} {
    0%, 100% {
      text-shadow: 
        0 0 {{ block.settings.glow_intensity }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }};
    }
    50% {
      text-shadow: 
        0 0 {{ block.settings.glow_intensity | times: 1.5 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 4.5 }}px {{ block.settings.glow_color }};
    }
  }

  @media screen and (max-width: 749px) {
    .ai-glow-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-glow-heading-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading_text != blank %}
    <h2 class="ai-glow-heading-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h2>
  {% else %}
    <h2 class="ai-glow-heading-{{ ai_gen_id }}">Add your heading text</h2>
  {% endif %}
</div>

{% schema %}
{
  "name": "Glowing heading",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading text",
      "default": "Glowing Heading"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 20,
      "max": 120,
      "step": 2,
      "unit": "px",
      "default": 48
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        },
        {
          "value": "800",
          "label": "Extra bold"
        }
      ],
      "default": "700"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Glow effect"
    },
    {
      "type": "color",
      "id": "glow_color",
      "label": "Glow color",
      "default": "#00ffff"
    },
    {
      "type": "range",
      "id": "glow_intensity",
      "label": "Glow intensity",
      "min": 5,
      "max": 30,
      "step": 5,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "Animation speed",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "unit": "s",
      "default": 2
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Glowing heading"
    }
  ]
}
{% endschema %}
