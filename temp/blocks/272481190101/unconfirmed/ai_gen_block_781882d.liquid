{% doc %}
  @prompt
    Add a product slider above the header to cycling pictures of products and prices. With functionality so that I can switch products being displayed easily. I also want to be able to show products from multiple collections. that navigates you to the product page when clicked on. 
    
    
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    overflow: hidden;
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ block.settings.gap }}px;
  }

  .ai-product-slider-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.slides_desktop | minus: 1 }} * {{ block.settings.gap }}px)) / {{ block.settings.slides_desktop }});
    min-width: 0;
  }

  .ai-product-slider-card-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
  }

  .ai-product-slider-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-product-slider-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background-color: #f4f4f4;
    overflow: hidden;
  }

  .ai-product-slider-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-slider-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-slider-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 8px 0;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .ai-product-slider-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 700;
    margin: 0;
  }

  .ai-product-slider-compare-price-{{ ai_gen_id }} {
    color: {{ block.settings.compare_price_color }};
    font-size: {{ block.settings.price_size | times: 0.9 }}px;
    text-decoration: line-through;
    margin-left: 8px;
    opacity: 0.7;
  }

  .ai-product-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    z-index: 2;
    opacity: 0.9;
  }

  .ai-product-slider-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    opacity: 1;
  }

  .ai-product-slider-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-slider-nav-prev-{{ ai_gen_id }} {
    left: -20px;
  }

  .ai-product-slider-nav-next-{{ ai_gen_id }} {
    right: -20px;
  }

  .ai-product-slider-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-product-slider-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-product-slider-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    opacity: 0.3;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-product-slider-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  @media screen and (max-width: 989px) {
    .ai-product-slider-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.slides_tablet | minus: 1 }} * {{ block.settings.gap }}px)) / {{ block.settings.slides_tablet }});
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-slider-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.slides_mobile | minus: 1 }} * {{ block.settings.gap }}px)) / {{ block.settings.slides_mobile }});
    }

    .ai-product-slider-nav-prev-{{ ai_gen_id }} {
      left: 0;
    }

    .ai-product-slider-nav-next-{{ ai_gen_id }} {
      right: 0;
    }
  }
