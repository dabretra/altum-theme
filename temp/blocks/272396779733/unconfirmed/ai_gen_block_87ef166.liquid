    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder",
      "default": "#999999"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "focus_border_color",
      "label": "Focus border",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Search icon",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "submit_icon_color",
      "label": "Submit icon",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "submit_icon_hover_color",
      "label": "Submit icon hover",
      "default": "#666666"
    }
  ],
  "presets": [
    {
      "name": "Header search"
    }
  ]
}
{% endschema %}
