{% doc %}
  @prompt
    Add a search bar to the header
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-search-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-header-search__form-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-header-search__input-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
  }

  .ai-header-search__input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px;
    padding-left: {{ block.settings.input_padding | plus: 40 }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .ai-header-search__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
  }

  .ai-header-search__input-{{ ai_gen_id }}:focus {
    border-color: {{ block.settings.focus_border_color }};
  }

  .ai-header-search__icon-{{ ai_gen_id }} {
    position: absolute;
    left: {{ block.settings.input_padding }}px;
    top: 50%;
    transform: translateY(-50%);
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    pointer-events: none;
  }

  .ai-header-search__submit-{{ ai_gen_id }} {
    position: absolute;
    right: {{ block.settings.input_padding }}px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.submit_icon_color }};
    transition: color 0.3s ease;
  }

  .ai-header-search__submit-{{ ai_gen_id }}:hover {
    color: {{ block.settings.submit_icon_hover_color }};
  }

  .ai-header-search__submit-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-header-search-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-header-search__input-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-header-search-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <form action="{{ routes.search_url }}" method="get" role="search" class="ai-header-search__form-{{ ai_gen_id }}">
    <div class="ai-header-search__input-wrapper-{{ ai_gen_id }}">
      <svg class="ai-header-search__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      
      <input
        type="search"
        name="q"
        class="ai-header-search__input-{{ ai_gen_id }}"
        value="{{ search.terms | escape }}"
        placeholder="{{ block.settings.placeholder_text }}"
        aria-label="{{ block.settings.placeholder_text }}"
        autocomplete="off"
      >
      
      <button type="submit" class="ai-header-search__submit-{{ ai_gen_id }}" aria-label="Search">
        <svg class="ai-header-search__submit-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </form>
</div>

