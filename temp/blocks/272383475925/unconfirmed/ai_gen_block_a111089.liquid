{% doc %}
  @prompt
    i WANT TO ADD AN ADDITIONAL SECTION SO I CAN PUT A LANDSCAPE PHOTO ABOVE BELOW THE HEADER
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-landscape-photo-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
  }

  .ai-landscape-photo__container-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing_top }}px {{ block.settings.spacing_horizontal }}px {{ block.settings.spacing_bottom }}px;
  }

  .ai-landscape-photo__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-landscape-photo__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-landscape-photo__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-landscape-photo__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-landscape-photo__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-landscape-photo__image-{{ ai_gen_id }},
    .ai-landscape-photo__placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-landscape-photo__container-{{ ai_gen_id }} {
      padding: {{ block.settings.spacing_top_mobile }}px {{ block.settings.spacing_horizontal_mobile }}px {{ block.settings.spacing_bottom_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-landscape-photo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-landscape-photo__container-{{ ai_gen_id }}">
    <div class="ai-landscape-photo__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-landscape-photo__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-landscape-photo__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-landscape-photo__empty-state-{{ ai_gen_id }}">
            Add a landscape photo
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

