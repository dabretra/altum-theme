{% doc %}
  @prompt
    I want to add a slider for products to show off
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-slider-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 30px;
  }

  .ai-product-slider-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
  }

  .ai-product-slider-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-product-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.product_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-product-slider-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-slider-item-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.product_gap }}px * ({{ block.settings.products_per_row }} - 1)) / {{ block.settings.products_per_row }});
    min-width: 200px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 12px;
  }

  .ai-product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-align: center;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 14px;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: background-color 0.3s ease;
  }

  .ai-slider-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-slider-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-slider-nav-prev-{{ ai_gen_id }} {
    left: -20px;
  }

  .ai-slider-nav-next-{{ ai_gen_id }} {
    right: -20px;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-product-slider-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.product_gap }}px * 1) / 2);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-slider-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.product_gap }}px * 0) / 1);
    }

    .ai-slider-nav-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<product-slider-{{ ai_gen_id }} class="ai-product-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-slider-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-product-slider-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-product-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-product-slider-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-product-slider-wrapper-{{ ai_gen_id }}">
        <button
          class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-prev-{{ ai_gen_id }}"
          aria-label="Previous products"
          data-direction="prev"
        >
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>

        <div class="ai-product-slider-track-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
            <div class="ai-product-slider-item-{{ ai_gen_id }}">
              <div class="ai-product-card-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-product-image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-product-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </a>
                <div class="ai-product-info-{{ ai_gen_id }}">
                  <h3 class="ai-product-title-{{ ai_gen_id }}">
                    <a href="{{ product.url }}" class="ai-product-title-link-{{ ai_gen_id }}">
                      {{ product.title }}
                    </a>
                  </h3>
                  <div class="ai-product-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                  {% if block.settings.show_button %}
                    <a href="{{ product.url }}" class="ai-product-button-{{ ai_gen_id }}">
                      {{ block.settings.button_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <button
          class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-next-{{ ai_gen_id }}"
          aria-label="Next products"
          data-direction="next"
        >
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% else %}
      <div class="ai-empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p>Next, select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</product-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-product-slider-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slider-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slider-nav-next-{{ ai_gen_id }}');

        if (!this.track || !this.prevButton || !this.nextButton) return;

        this.setupEventListeners();
        this.updateButtonStates();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.slide('prev'));
        this.nextButton.addEventListener('click', () => this.slide('next'));
        this.track.addEventListener('scroll', () => this.updateButtonStates());
      }

      slide(direction) {
        const scrollAmount = this.track.offsetWidth * 0.8;
        const currentScroll = this.track.scrollLeft;

        if (direction === 'next') {
          this.track.scrollLeft = currentScroll + scrollAmount;
        } else {
          this.track.scrollLeft = currentScroll - scrollAmount;
        }
      }

      updateButtonStates() {
        const maxScroll = this.track.scrollWidth - this.track.offsetWidth;
        const currentScroll = this.track.scrollLeft;

        this.prevButton.disabled = currentScroll <= 0;
        this.nextButton.disabled = currentScroll >= maxScroll - 1;
      }
    }

    customElements.define('product-slider-{{ ai_gen_id }}', ProductSlider{{ ai_gen_id }});
  })();
</script>

